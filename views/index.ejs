   <!-- views/index.ejs -->
   <!DOCTYPE html>
   <html>
     <head>
       <title><%= title %></title>
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
       <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
       <style>
         body {
           font-family: 'Roboto', sans-serif;
           background-color: #f0f2f5;
           padding: 20px;
         }
         .container {
           width: 100%;
           margin: auto;
           background: #fff;
           padding: 20px;
           border-radius: 12px;
           box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
           display: flex;
           justify-content: space-between;
         }
         .form-section, .uploader-section {
           width: 48%;
         }
         h1 {
           text-align: center;
           margin-bottom: 20px;
           color: #333;
         }
         .dropdown {
           margin-bottom: 15px;
         }
         .form-control {
           border-radius: 8px;
           border: 1px solid #ced4da;
           transition: border-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
         }
         .form-control:focus {
           border-color: #80bdff;
           box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
         }
         .form-control:disabled {
           background-color: #e9ecef;
         }
         .btn-primary {
           background-color: #007bff;
           border-color: #007bff;
           border-radius: 8px;
           transition: background-color 0.3s ease-in-out, border-color 0.3s ease-in-out;
         }
         .btn-primary:hover {
           background-color: #0056b3;
           border-color: #004085;
         }
         .uploader-section {
           display: flex;
           flex-direction: column;
           align-items: center;
           justify-content: center;
           border: 2px dashed #ced4da;
           padding: 20px;
           border-radius: 12px;
           background-color: #f9f9f9;
         }
         .uploader-section input[type="file"] {
           display: none;
         }
         .uploader-section label {
           cursor: pointer;
           color: #007bff;
           font-weight: bold;
           text-align: center;
         }
         .uploader-section p {
           margin-top: 10px;
           color: #666;
         }
       </style>
     </head>
     <body>
       <div class="container">
         <div class="form-section">
           <h1><%= message %></h1>
           <form id="uploadForm">
             <div class="form-group dropdown">
               <label for="course">Course</label>
               <select class="form-control" id="course" style="height: 50px;">
                 <option value="">Select Course</option>
                 <!-- Options will be populated by script -->
               </select>
             </div>
             <div class="form-group dropdown">
               <label for="class">Class</label>
               <select class="form-control" id="class" disabled style="height: 50px;">
                 <option value="">Select Class</option>
                 <!-- Options will be populated by script -->
               </select>
             </div>
             <div class="form-group dropdown">
               <label for="resource">Resource</label>
               <select class="form-control" id="resource" disabled style="height: 50px;">
                 <option value="">Select Resource</option>
                 <!-- Options will be populated by script -->
               </select>
             </div>
             <div class="form-group dropdown">
               <label for="content">Content</label>
               <select class="form-control" id="content" disabled style="height: 50px;">
                 <option value="">Select Content</option>
                 <!-- Options will be populated by script -->
               </select>
             </div>
             <button type="button" class="btn btn-primary" onclick="createFolder()">Upload Video</button>
           </form>
         </div>
         <div class="uploader-section">
           <input type="file" id="videoUpload" accept="video/mp4">
           <label for="videoUpload">
             <i class="fas fa-upload fa-2x"></i>
             <p>Click to upload a video</p>
           </label>
         </div>
       </div>
       <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
       <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
       <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
       <!-- Include the external JavaScript file -->
       <script src="/scripts/dropdown.js"></script>
       <script>
         function createFolder() {
           const course = document.getElementById('course').value;
           const cls = document.getElementById('class').value;
           const resource = document.getElementById('resource').value;
           const content = document.getElementById('content').value;

           if (course && cls && resource && content) {
             const folderPath = `${course}/${cls}/${resource}/${content}`;
             console.log('Creating folder:', folderPath);
           const fileInput = document.getElementById('videoUpload');
           const file = fileInput.files[0];

           if (file) {
             const formData = new FormData();
             formData.append('file', file);
             formData.append('folderPath', folderPath);

             fetch('/upload', {
               method: 'POST',
               body: formData
             })
             .then(response => {
               if (!response.ok) {
                 throw new Error('Network response was not ok');
               }
               return response.json();
             })
             .then(data => {
               console.log('File uploaded successfully:', data);
               
               alert('File uploaded successfully!');
             })
             .catch(error => {
               console.error('Error uploading file:', error);
               alert('Error uploading file. Please try again.');
             });
           } else {
             alert('Please select a file to upload.');
           }
           } else {
             alert('Please select all options before uploading.');
           }
         }
       </script>
     </body>
   </html>